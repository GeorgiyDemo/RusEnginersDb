<Window x:Class="RusEnginersDb.SaveManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RusEnginersDb"
        mc:Ignorable="d"
        Title="SaveManager" Height="300" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Мастер сохранения" Grid.Row="0" FontSize="18"/>
        <ListBox x:Name="SaveInfo" Grid.Row="1"/>
        <StackPanel Grid.Row="2">
            <Label Content="Опишите, что вы сделали"/>
            <TextBox x:Name="ItemComment" Margin="10" TextWrapping="Wrap" Text="Изменение..." Height="50"/>
            <Button Content="Сохранить" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
